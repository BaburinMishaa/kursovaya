<Window x:Class="Kursovaya.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация"
        Width="250" Height="370"
        Background="#6D6767"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="0,0,0,-28">
        <TextBlock Text="Регистрация" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"/>

        <TextBlock Text="ФИО:" FontSize="12" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="23,92,0,0"/>
        <TextBox x:Name="FullNameTextBox" Width="160" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="56,92,0,0" Background="White"/>

        <TextBlock Text="Логин:" FontSize="12" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="13,134,0,0"/>
        <TextBox x:Name="LoginTextBox" Width="160" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="56,132,0,0" Background="White"/>

        <TextBlock Text="Пароль:" FontSize="12" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="7,174,0,0"/>
        <PasswordBox x:Name="PasswordBox" Width="160" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="56,174,0,0" Background="White"/>

        <TextBlock Text="Паспортные данные:" FontSize="12" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="13,214,0,0"/>
        <TextBox x:Name="PassportTextBox" Width="83" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="133,212,0,0" Background="White" TextChanged="PassportTextBox_TextChanged"/>

        <Button Content="Регистрация" Width="98" Height="27" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,256,0,0" Background="Black" Foreground="White" FontSize="12" FontWeight="Bold" Click="OnRegisterButtonClick"/>

        <Button Content="Войти" Width="99" Height="27" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,295,0,0" Background="Black" Foreground="White" FontSize="12" FontWeight="Bold" Click="OnLoginButtonClick"/>
    </Grid>
</Window>
