<Window x:Class="Kursovaya.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход"
        Width="248" Height="350"
        Background="#6D6767"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <TextBlock Text="Вход" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"/>

        <TextBlock Text="Логин:" FontSize="12" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,80,0,0"/>
        <TextBox x:Name="LoginTextBox" Width="180" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,110,0,0" Background="White"/>

        <TextBlock Text="Пароль:" FontSize="12" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,150,0,0"/>
        <PasswordBox x:Name="PasswordBox" Width="180" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,180,0,0" Background="White"/>

        <Button Content="Войти" Width="98" Height="26" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,230,0,0" Background="Black" Foreground="White" FontSize="12" FontWeight="Bold" Click="OnLoginButtonClick"/>

        <Button Content="Регистрация" Width="99" Height="27" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,271,0,0" Background="Black" Foreground="White" FontSize="12" FontWeight="Bold" Click="OnRegistrationButtonClick"/>
    </Grid>
</Window>
